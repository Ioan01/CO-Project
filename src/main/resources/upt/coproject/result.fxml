<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="576.0" prefWidth="1024.0" stylesheets="@../../styles/style_result.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="upt.coproject.ResultController">
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#goToMainPage" text="Run another benchmark" />
            <Button mnemonicParsing="false" onAction="#saveToDatabase" text="Save result to database" />
            <Button mnemonicParsing="false" onAction="#goToDetailedResultPage" text="See result details" />
         </children>
      </HBox>
   </bottom>
   <center>
      <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="511.0" fitWidth="1224.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../img/gandacei/ant.jpg" />
               </image>
            </ImageView>
            <VBox prefHeight="222.0" prefWidth="847.0" style="-fx-alignment: center;" styleClass="style_result.css">
               <children>
                  <Label style="-fx-background-color: #000000;" text="Your score is:" textFill="WHITE">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="scoreLabel" style="-fx-background-color: #000000;" text="SCORE" textFill="WHITE">
                     <font>
                        <Font size="25.0" />
                     </font>
                  </Label>
                  <Label fx:id="gandacelLabel" style="-fx-background-color: #000000;" text="Furnicuță" textFill="WHITE">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
      </StackPane>
   </center>
</BorderPane>
